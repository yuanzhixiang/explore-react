{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5173/",
      // webRoot 用仓库根，配合 sourceMapPathOverrides 兼容 demo + 源码断点
      "webRoot": "${workspaceFolder}",
      // "sourceMapPathOverrides": {
      //   // 保证 packages 下面的源码能进入断点
      //   "/@fs/*": "/*",
      //   // 保证 fixtures/packaging/webpack/dev 下面的源码能进入断点
      //   "*": "${workspaceFolder}/fixtures/packaging/webpack/dev/*"
      // }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug hello CLI",
      "program": "${workspaceFolder}/dist/index.js",
      "cwd": "${workspaceFolder}",
      "preLaunchTask": "pnpm: build",
      "sourceMaps": true,
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/node_modules/**",
      ],
    },
  ],
}
