{
  // 定义了一个制表符应该显示为多少个空格的宽度
  "editor.tabSize": 2,
  // 当你按 Tab 键时，实际插入空格字符而不是制表符字符
  "editor.insertSpaces": true,
  // 严格按照你设定的规则执行，不根据文件的缩进模式自动调整
  "editor.detectIndentation": false,
  // 保存时自动格式化
  "editor.formatOnSave": true,
  // 禁用 JS/TS 校验，但保留语言服务（跳转、补全等都还在）
  "javascript.validate.enable": false,
  "typescript.validate.enable": false,
  // 这两个是 VSCode 的 TS/JS 语言服务开关，默认 Cmd+Click 会跳到类型声明，
  // 开启 preferGoToSourceDefinition 后会优先尝试跳到真实源码实现，（如果能找到），找不到才回退到 .d.ts
  "javascript.preferGoToSourceDefinition": true,
  "typescript.preferGoToSourceDefinition": true,
  // 指定 prettier 的路径为项目本地安装的版本，确保使用一致的格式化规则
  "prettier.prettierPath": "./node_modules/prettier",

  // 增加 TypeScript 语言服务的内存限制，不然 vscode 会卡死
  "typescript.tsserver.maxTsServerMemory": 16384,

  // 下面这一段是为了避免监视 fixtures 里的嵌套依赖导致 TS/JS 服务卡死，但也不确定是否有效，先放着吧
  // "files.watcherExclude": {
  //   "**/node_modules/**": true,
  //   "**/.pnpm/**": true,
  //   "build/**": true,
  //   "dist/**": true,
  //   "fixtures/**": true,
  //   "fixtures/**/node_modules/**": true,
  // },
}
